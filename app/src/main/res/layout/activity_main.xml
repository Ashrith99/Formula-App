<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4fc3f7"
            android:gravity="center"
            android:text="Physics Formula Calculator"
            android:textColor="#151414"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:text="Lorentz Factor"
            android:textColor="#000000"
            android:textSize="16sp"
            app:backgroundTint="#4fc3f7" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:background="#4fc3f7"
            android:text="SPI Factor"
            android:textColor="#000000"
            android:textSize="16sp"
            app:backgroundTint="#4fc3f7" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:background="#4fc3f7"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#4fc3f7"
            android:text="TextView"
            android:textSize="20sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="#4fc3f7"
            android:text="Reset"
            android:textColor="#000000"
            android:visibility="invisible"
            app:backgroundTint="#4fc3f7" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4fc3f7"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="LORENTZ FACTOR"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="#000000"
            android:text="Enter the value of speed moving observer(v)"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            android:ems="10"
            android:gravity="center"
            android:hint="v (in m/s)"
            android:inputType="number|textPersonName"
            android:textColor="#131313"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Calculate"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            app:backgroundTint="#000000" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="#000000"
            android:text="Clear"
            android:textColor="#ffffff"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:text="Pratice Session"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:text="Back To Home"
            android:textColor="#ffffff"
            android:textColorHint="#000000"
            app:backgroundTint="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4fc3f7"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textview12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="center"
            android:text='Enter the speed " v " :'
            android:textColor="#ffffff"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edittext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="center"
            android:hint="speed in m/s"
            android:inputType="textPersonName|numberDecimal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="#000000"
            android:gravity="center"
            android:text="Enter the lorentz Factor :"
            android:textColor="#ffffff"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edittext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Lorentz factor you get"
            android:inputType="textPersonName|numberDecimal"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#4fc3f7"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:text="Clear"
            android:textColor="#ffffff"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="CHECK"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:text="Back"
            android:textColor="#ffffff"
            app:backgroundTint="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>